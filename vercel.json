{
  "version": 2,
  "name": "attendance-management-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_BASE_URL": "https://university-attendance-backend.railway.app"
  },
  "build": {
    "env": {
      "REACT_APP_API_BASE_URL": "https://university-attendance-backend.railway.app"
    }
  },
  "regions": ["icn1"],
  "github": {
    "silent": true
  }
}